<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chamodev.infoinputexample.welcome.InfoInputWelcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_input_welcome_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                android:text="@string/starting_habit_molding"
                android:textSize="26dp" />


            <TextView
                android:id="@+id/info_input_welcome_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:textSize="26dp" />

            <ImageView
                android:id="@+id/info_input_welcome_cover_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:src="@drawable/welcome_img" />

            <TextView
                android:id="@+id/info_input_welcome_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:textSize="14dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/info_input_welcome_ok_btn"
                    android:layout_width="186dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/noto_sans_bold"
                    android:gravity="center"
                    android:text="@string/preparing_for_habit_molding"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
