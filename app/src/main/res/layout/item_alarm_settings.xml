<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/alarm_settings_icon_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/alarm_settings_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/alarm_settings_icon_iv"
        android:textColor="@color/greyish"
        android:textSize="16dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/alarm_settings_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/default_time"
        android:textColor="@color/greyish"
        android:textSize="16dp"
        android:typeface="sans" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/alarm_settings_title_tv"
        android:layout_alignParentBottom="true"
        android:background="@color/line_light_grey" />
</RelativeLayout>
